<div class="row">
    {{#each notes}}
        <div class="col-md-3 col-ms-12">
            <div class="card m-1">
                <div class="card-body">
                    <h4 class="card-title d-flex justify-content-between align-items-center">
                        {{titulo}} <a href="/note/edit/{{_id}}"> <i class="fas fa-edit"></i></a>
                    </h4>
                    <p>{{descripcion}}</p>
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                    <input type="hidden" name="_method" value="DELETE">
                        <button class="btn btn-danger btn-block btn-sm" type="submit">
                            Borrar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    
    {{else}} 
        
            <div class="card mx-auto">
                <div class="card-body">
                    <p class="lead">Todav√≠a no hay notas ingresadas.</p>
                    <a href="notes/add" class="btn btn-success btn-block">Crea una!</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>  